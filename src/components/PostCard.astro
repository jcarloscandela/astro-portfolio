---
import { buttonVariants } from "@/components/ui/button";
import type { CollectionEntry } from "astro:content";
import { TagList } from "../components/ui/TagList";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const { data } = post;

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<article class="rounded-lg border bg-card text-card-foreground shadow-sm overflow-hidden">
  {data.image && (
    <div class="w-full h-48 overflow-hidden">
      <img src={data.image} alt={data.title} class="w-full h-full object-cover" />
    </div>
  )}
  <div class="p-6 space-y-4">
    <div class="space-y-2">
      <h2 class="text-2xl font-bold tracking-tight">{data.title}</h2>
      <time class="text-sm text-muted-foreground" datetime={data.date.toISOString()}>
        {formatDate(data.date)}
      </time>
      {data.tags && <TagList tags={data.tags} />}
    </div>
    <p class="text-muted-foreground">{data.description}</p>
    <div class="flex justify-end">
      <a 
        href={`/posts/${post.slug}`} 
        class={buttonVariants({ variant: "outline" })}
      >
        Read more
      </a>
    </div>
  </div>
</article>
