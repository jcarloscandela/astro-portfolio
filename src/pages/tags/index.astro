---
import { getTagsWithCounts } from '../../lib/utils';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { TagList } from '../../components/ui/TagList';

const tags = await getTagsWithCounts();
---

<BaseLayout title="Tags - Article Categories">
  <div class="container mx-auto px-4">
    <section class="py-12">
      <div class="max-w-3xl mx-auto text-center mb-8">
        <h1 class="text-4xl font-bold mb-4">Tags Cloud</h1>
        <p class="text-muted-foreground">
          Browse all article categories. Click on a tag to view all articles associated with it.
        </p>
      </div>
      
      <div class="bg-card rounded-lg shadow-sm border p-6 mb-8">
        <h2 class="text-2xl font-semibold mb-4">All Tags</h2>
        <div class="tag-cloud">
          <TagList tags={tags} />
        </div>
      </div>
      
      <div class="prose prose-sm max-w-none dark:prose-invert">
        <p>
          The tag cloud above shows all categories used across articles on this site.
          The number next to each tag indicates how many articles use that tag.
        </p>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem;
  }
</style>
